<div class="container text-center">
	<h2>Forgot your password?</h2>
	<form role="form" class="changepass">
		<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
		  <%= devise_error_messages! %>

		  <div style="display:inline;"><%= f.label :email , :style => 'height:33px;' %>
		  <%= f.email_field :email, :autofocus => true , :style => 'height:33px;'%></div>

		  <div style="display:inline"><%= f.submit "Send me reset password instructions" , :class => 'btn btn-warning' %></div>
		<% end %>
	</form>
</div>