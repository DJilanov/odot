<div class="container text-center signup">
  <h2>Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
    <%= devise_error_messages! %>

    <div>
      <label class="col-xs-6" >
        <span style="float:right">
          <%= f.label :email %>
        </span>
      </label>
      <div class="col-xs-6">
        <span style="float:left">
          <%= f.email_field :email, :autofocus => true , :style => 'width:200px;' %>
        </span>
      </div>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div>
      <label class="col-xs-6" >
        <span style="float:right">
          <%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
        </span>
      </label>
      <div class="col-xs-6">
        <span style="float:left">
          <%= f.password_field :password, :autocomplete => "off", :style => 'width:400px;'  %>
        </span>
      </div>
    </div>

    <div>
      <label class="col-xs-6" >
        <span style="float:right">
          <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i>
        </span>
      </label>
      <div class="col-xs-6">
        <span style="float:left">
          <%= f.password_field :current_password  , :style => 'width:400px;' %>
        </span>
      </div>
    </div>

    <div><%= f.submit "Update" , :class => 'btn btn-success'%></div>
  <% end %>

  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete , :class => 'btn btn-warning'%></p>
</div>
<button type="button" class="btn btn-default"><%= link_to "Back", :back %></button>
